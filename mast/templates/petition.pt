<metal:main use-macro="load: global.pt">
<div class="content" metal:fill-slot="content">
    <section class="main home">
        <h1>Sign the Petition</h1>
        <h2 class="statement">I support opening a MaST Community Charter School in
Neshaminy and urge my elected representatives to approve their charter school
application.</h2>
        <div class="petition" style="width:310px">
            <form method="POST" action="/petition.html" class="petitionForm">
                <input type="hidden" name="lat" value="0"/>
                <input type="hidden" name="lon" value="0"/>
                <div class="field">
                    <label for="res">Are you a Neshaminy Resident?</label>
                    <input type="checkbox" name="res" id="res" value="yes"/>
                </div>
                <div class="field">
                    <label for="par">Do you have school-age children?</label>
                    <input type="checkbox" name="par" id="par" value="yes"/>
                </div>
                <div class="field">
                    <label for="tea">Are you a certified teacher?</label>
                    <input type="checkbox" name="tea" id="tea" value="yes"/>
                </div>
                <div class="field">
                    <label for="name">Full Name</label>
                    <input type="text" name="fn" id="name" class="name"/>
                </div>
                <div class="field">
                    <label for="email">Email</label>
                    <input type="email" name="em" id="email" class="email"/>
                </div>
                <div class="field">
                    <label for="addr">Street Address</label>
                    <input type="text" name="a" id="addr" class="addr"/>
                </div>
                <div class="field">
                    <label for="zip">Zipcode</label>
                    <input type="text" name="z" id="zip" class="zip"/>
                </div>
                <div class="field signature">
                    <label>Draw your signature</label>
                    <div class="sig sigWrapper">
                        <canvas class="pad" width="300" height="70"></canvas>
                        <input type="hidden" name="output" class="output">
                    </div>
                </div>
                <div class="buttons">
                    <span class="clearButton"><a href="#clear">clear signature</a></span>
                    <button type="submit">Sign Petition</button>
                </div>
            </form>
        </div>
    </section>
    <script type="text/javascript">
        nci.addGeo($('form.petitionForm'));
        jQuery(function($) { $('FORM.petitionForm').signaturePad({lineTop:55,penColour:'#000',drawOnly:true}); });
    </script>
</div>
</metal:main>
